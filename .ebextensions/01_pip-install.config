files:
  "/tmp/pipInstallation.sh":
    mode: "000777"
    owner: root
    group: root
    content: |
      #! /bin/bash
      source /opt/python/run/venv/bin/activate
      pip install Flask==1.0.2
      pip install flask-restful==0.3.9
      pip install scikit-learn==1.1.3
      pip install Jinja2==2.10
      pip install python-dateutil==2.7.5
      pip install Werkzeug==0.14.1
      pip install .
      wget https://raw.github.com/NithSelv/ECE444-F2022-Lab7/main/basic_classifier.pkl --output-document=/tmp/basic_classifier.pkl
      wget https://raw.github.com/NithSelv/ECE444-F2022-Lab7/main/count_vectorizer.pkl --output-document=/tmp/count_vectorizer.pkl

commands:
  01_execute:
    command: "/tmp/pipInstallation.sh"
